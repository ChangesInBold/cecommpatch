<container type="vertbox" hsp="expand" vsp="expand" name="contentsVB">
	<container type="horizbox" hsp="expand" vsp="minimum" horizontal_padding="2" vertical_padding="2" solidfill="1" solidfillname="miniPaperBrassLight" >
		
		<!-- Zoom to button -->
		<imagebutton name="BuildingIcon"
				   text="Building Icon"
				   hsp="minimum" vsp="minimum" 
				imageSkin="ui//orderIcons.xml" image="messhall">
			
			<tooltip width="240" height="45" mouseRestDelay="0" followCursor="1">
				<container type="vertbox" hsp="expand" vsp="expand" horizontal_padding="4" vertical_padding="4" solidfill="1" solidfillname="glassBrassBorderDark" >
					<label name="buttonTooltipLabel"
						  text="Focus on Building"
						  hap="center" vap="center" state="tooltip_text"/>
				</container>
			</tooltip>        
		</imagebutton>
		
		<!-- building name + workcrew selection box -->
		<container type="vertbox" hsp="expand" vsp="expand" name="demolishBox">
			<container type="vertbox" hsp="expand" vsp="minimum" name="buildingFancyName" hap="center" horizontal_padding="2" vertical_padding="2" solidfill="1" solidfillname="miniPaper"/>
			<!--Commented out Upper Class Patron code until we hook it up-->
			<!--<label name="workshopcrewlabel" text="Upper Class Patron" vsp="minimum" hap="center"/>
			<combobox name="patron" />-->
			<container type="vertbox" hsp="expand" vsp="expand" name="workCrewSelectionBoxContainer"/>
		</container>

		<!-- Demolition button -->
		<imagebutton name="DemolishBuildingButton"
				   text="Demolish Building"
				   sfx="button_pneumatic"
				   hsp="minimum" vsp="minimum" 
			
			imageSkin="ui/orderIcons.xml" image="demolish_building">
			<tooltip width="240" height="45" mouseRestDelay="0" followCursor="1">
				<container type="vertbox" hsp="expand" vsp="expand" horizontal_padding="4" vertical_padding="4" solidfill="1" solidfillname="glassBrassBorderDark" >
					<label name="buttonTooltipLabel"
						  text="Order this Public House demolished."
						  hap="center" vap="center" state="tooltip_text"/>
					
				</container>
			</tooltip>        
		</imagebutton>
		
	</container>
	
	<container name="workshiftContainer"
			type="vertbox"
			hsp="fixed" fixed_width="279"
			vsp="fixed" fixed_height="44"
			hap="center" vertical_padding="6" horizontal_padding="8"
			solidfill="1" solidfillname="miniPaperBrassLight"/>
	
	
<!-- main content box -->
<container type="vertbox" hsp="expand" vsp="minimum">
	
	<!-- booze vat count & pub contents -->
