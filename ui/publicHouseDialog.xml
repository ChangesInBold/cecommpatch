						<container type="vertbox" hsp="minimum" vsp="minimum">
							<container type="vertbox" hsp="minimum" vsp="minimum"
									 solidfill="1" solidfillname="miniPaperLight"
									 name="modeControlsContainer1"/>
						</container>
						
						<container type="vertbox" hsp="minimum" vsp="minimum">
							<container type="vertbox" hsp="minimum" vsp="minimum"
									 solidfill="1" solidfillname="miniPaperLight"
