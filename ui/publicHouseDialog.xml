			<container type="vertbox" hsp="expand" vsp="minimum">
				<label text="Laudanum distribution:" state="small" hap="center"/>
				<!-- Booze Distribution Modes -->
				<container type="horizbox" hsp="expand" vsp="minimum"
						hap="center"
						vertical_gutter="4" vertical_padding="4"
						horizontal_padding="8"
						horizontal_margin="4"
						solidfill="1" solidfillname="miniPaperLight"
						name="modeControlsContainer">
					
					<container type="vertbox" hsp="expand" vsp="minimum">
					<container type="horizbox" hsp="minimum" vsp="minimum" horizontal_gutter="8" hap="center">

						<container type="vertbox" hsp="minimum" vsp="minimum">
							<container type="vertbox" hsp="minimum" vsp="minimum"
									 solidfill="1" solidfillname="miniPaperLight"
									 name="laudanumControlsContainer1"/>
						</container>
						
						<container type="vertbox" hsp="minimum" vsp="minimum">
							<container type="vertbox" hsp="minimum" vsp="minimum"
									 solidfill="1" solidfillname="miniPaperLight"
									 name="laudanumControlsContainer2"/>
						</container>
						
					</container>
					<container type="vertbox" hsp="minimum" vsp="minimum" name="laudanumModeContainer" hap="center"/>
