					imgPctX="50" imgPctY="50"
					horizontal_margin="10" vertical_margin="10">
					
			<tooltip width="240" height="45" mouseRestDelay="0" followCursor="1">
				<container type="vertbox" hsp="expand" vsp="expand" horizontal_padding="4" vertical_padding="4" solidfill="1" solidfillname="glassBrassBorderDark" >
					<label name="buttonTooltipLabel" text="Focus on Crop Field" vsp="center" state="tooltip_text"/>
				</container>
			</tooltip>
		</imagebutton>
		
		<!-- assign workcrew widget -->
